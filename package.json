{
  "name": "simplepolygon",
  "version": "2.0.0",
  "author": {
    "name": "Manuel Claeys Bouuaert",
    "email": "manuel.claeys.b@gmail.com",
    "url": "https://manuelclaeysbouuaert.be"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mclaeysb/simplepolygon.git"
  },
  "homepage": "https://github.com/mclaeysb/simplepolygon#readme",
  "bugs": {
    "url": "https://github.com/mclaeysb/simplepolygon/issues"
  },
  "description": "Takes a complex (i.e. self-intersecting) geojson polygon, and breaks it down into its composite simple, non-self-intersecting one-ring polygons.",
  "keywords": [
    "polygon",
    "complex polygon",
    "simple polygon",
    "self-intersection",
    "winding number"
  ],
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "test": "NODE_ENV=test vitest run",
    "bench": "node bench.js",
    "lint": "prettier --check src test && eslint src test --ext .js,.ts",
    "format": "prettier --write src test",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "@turf/area": "^4.5.0",
    "@turf/helpers": "^4.5.0",
    "@turf/inside": "^4.5.2",
    "@turf/within": "^4.5.0",
    "geojson-polygon-self-intersections": "^2.0.0",
    "rbush": "^2.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@turf/meta": "^4.0.1",
    "@types/rbush": "4.0.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "prettier": "3.7.4",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.0",
    "vitest": "4.0.16"
  }
}
